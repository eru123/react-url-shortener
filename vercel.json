{
    "version": 2,
    "builds": [
      {
        "src": "backend/build/index.js",
        "use": "@vercel/node",
        "config": { "includeFiles": ["backend/build/**"] }
      },
      {
        "src": "ui/build/**",
        "use": "@vercel/static",
        "config": { "includeFiles": ["ui/build/**"] }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "index.js"
      },
      {
        "source": "/((?!api/.*).*)",
        "destination": "index.html"
      },
      {
        "src": "/",
        "dest": "index.html"
      }
    ]
  }